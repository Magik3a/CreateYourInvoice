@model akcet_fakturi.Models.ContactFormModel
@{
    ViewBag.Title = "Home Page";

}
<!--LAYOUT-->
<div class="container" style="background-image:url(images/1.jpg); background-size:cover;margin-top:30px; padding-top:10px; padding-bottom:60px;">

    <div class="row">

        <div class="col-md-6" style="margin-top:50px; color:#404040;">
            <h2>Онлайн фактурирането никога не е било по-лесно!</h2>

            <div class="row">
                <div class="col-md-12" style="padding-bottom:30px; padding-top:30px;"><h4> <span class="glyphicon glyphicon-ok"> &nbsp; </span>24 часа, 7 дни в седмицата достъп до Вашите фактури</h4></div>
            </div>

            <div class="row">
                <div class="col-md-12" style="padding-bottom:30px;"><h4> <span class="glyphicon glyphicon-ok">  &nbsp; </span>Създай фактурите си сам и спести време</h4></div>
            </div>

            <div class="row">
                <div class="col-md-12" style="padding-bottom:30px;"><h4> <span class="glyphicon glyphicon-ok">  &nbsp; </span>Изпрати фактурите си директно на твоя работодател</h4></div>
            </div>
        </div>

        <!--Links to AKCET.NL-->
        <div class="col-md-6" style="position:relative; top:45px;">
<h2 style="text-align:center; margin-bottom:35px;">Полезни връзки</h2>

            <div class="row">
                <div class="col-md-6">
                    <img src="../../images/Accounting.jpg" class="img-responsive image-link"/>
                    <button type="button" class="btn links-button" style="background-color:#FF8C00;">
                        <a href="http://akcet.nl/accounting-form-bg.html" target="_blank" style="color:#ffffff; font-weight:bold; text-decoration:none;"> Направи запитване</a>
                    </button>
                    <p class="text-links">Счетоводни услуги</p>
                </div>

                <div class="col-md-6">
                    <img src="../../images/car.jpg" class="img-responsive image-link" />
                    <button type="button" class="btn links-button" style="background-color:#FF8C00;">
                        <a href="http://akcet.nl/car-insurance-bg.html" target="_blank" style="color:#ffffff; font-weight:bold; text-decoration:none;"> Направи запитване</a>
                    </button>
                    <p class="text-links">Автомобилни застраховки</p>
                </div>
            </div>


            <div class="row">
                <div class="col-md-6">
                    <img src="../../images/health.jpg" class="img-responsive image-link" />
                    <button type="button" class="btn links-button" style="background-color:#FF8C00;">
                        <a href="http://akcet.nl/health-insurance-form-bg.html" target="_blank" style="color:#ffffff; font-weight:bold; text-decoration:none;"> Направи запитване</a>
                    </button>
                    <p class="text-links">Здравни застраховки</p>
                </div>

                <div class="col-md-6">
                    <img src="../../images/Airlines.jpg" class="img-responsive image-link" />
                    <button type="button" class="btn links-button" style="background-color:#FF8C00;">
                        <a href="http://akcet.nl/tickets-bg.html" target="_blank" style="color:#ffffff; font-weight:bold; text-decoration:none;"> Направи запитване</a>
                    </button>
                    <p class="text-links">Самолетни билети</p>
                </div>
            </div>
        </div>


    </div>
</div>


<!--SOme description about the company/website-->
<h3 style="text-align:center;">Fakturi.nl - създай своите фактури онлайн!</h3>
<p style="text-align:center;">alabala alabala alabala alabala alabala alabala alabala alabala alabala alabalavar alabalavar alabala alabala alabala alabala alabalavar alabala alabala alabalaalabalavar alabala valabalavalabala </p>




<!--facebook feed-->
<div class="container" style="margin-top:30px;">
    <div class="row">


        <div class="col-sm-6">
            <iframe src="http://www.facebook.com/plugins/likebox.php?href=http%3A%2F%2Fwww.facebook.com%2Fakcet.nl&amp;width=620&amp;colorscheme=light&amp;show_faces=true&amp;border_color&amp;stream=true&amp;header=true&amp;height=435" scrolling="yes" frameborder="0" style="border:none; overflow:hidden; width:600px; height:460px; background: white;  " allowTransparency="true"></iframe>
        </div>


        <!--request feed-->

        <div class="col-sm-6">
            <div id="row">
                <div class="col-md-12">
                    <h3 style="text-align:center;">Изпрати запитване</h3>
                </div>
            </div>
            @if (TempData["MessageIsSent"] == null)
            {

            <div class="row">
                @using (Html.BeginForm("Index", "Home", null, FormMethod.Post, new {@class = "form-horizontal", style = "margin-top:50px;"}))
                {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, new {@class = "col-sm-4 control-label", @for = "firstname"})
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.FirstName, new {htmlAttributes = new {@class = "form-control", id = "firstname", placeholder = "Въведете първото си име"}})
                        @Html.ValidationMessageFor(model => model.FirstName, "", new {@class = "text-danger"})
                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, new {@class = "col-sm-4 control-label", @for = "lastName"})
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.LastName, new {htmlAttributes = new {@class = "form-control", id = "lastName", placeholder = "Въведете фамилията си"}})
                        @Html.ValidationMessageFor(model => model.LastName, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new {@class = "col-sm-4 control-label", @for = "phone"})
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Phone, new {htmlAttributes = new {@class = "form-control", id = "phone", placeholder = "Въведете телефонен номер"}})
                        @Html.ValidationMessageFor(model => model.Phone, "", new {@class = "text-danger"})

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new {@class = "col-sm-4 control-label", @for = "email"})
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control", id = "email", placeholder = "Въведете актуален email адрес"}})
                        @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Message, new {@class = "col-sm-4 control-label", @for = "message"})
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Message, new {htmlAttributes = new {@class = "form-control", id = "message", placeholder = "Вашето съобщение тук", rows = 5}})
                        @Html.ValidationMessageFor(model => model.Message, "", new {@class = "text-danger"})

                    </div>
                </div>

                <div class="form-group">
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button type="submit" class="btn btn-default">Изпрати</button>
                        </div>
                    </div>
                </div>

                }
            </div>

            }
            else
            {
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4>	<i class="icon fa fa-check"></i> Succes!</h4>
                @TempData["MessageIsSent"].ToString()
            </div>
            }

        </div>
    </div>
</div>
