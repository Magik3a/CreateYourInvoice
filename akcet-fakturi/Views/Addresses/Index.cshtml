@using Kendo.Mvc.UI
@model IEnumerable<akcetDB.Address>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Addresses = "active";
}

<h2>Адреси</h2>
<!-- Helper for info boxes after manipulating data -->
@ResultHelper.ResultFromTempData(TempData)
<p>
    @Html.ActionLink("Добави нов", "Create",  null, new {@class="btn btn-success btnCreateNew" })
</p>

@(Html.Kendo().Grid(Model).Name("Addreses").Sortable().Filterable().Pageable().Columns(columns =>
{
columns.Bound(m => m.StreetName);
columns.Bound(m => m.ZipCode);
columns.Bound(m => m.City);
columns.Bound(m => m.DateCreated);
columns.Bound(m => m.DateModified);
columns.Template(@<text>
        @Html.ActionLink("Редактирай", "Edit", new { id = item.IdAddress }) |
        @Html.ActionLink("Детайли", "Details", new { id = item.IdAddress }) |
        @Html.ActionLink("Изтрий", "Delete", new { id = item.IdAddress })
</text>).Title("Функции");
})
)
