@using akcet_fakturi.Helpers
@model akcet_fakturi.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Manage = "active";
}

<h2>@Html.MultiLanguage(1079)</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>
        @*Change your account settings*@
        @Html.MultiLanguage(1078)
    </h4>
    <hr />

    <table class="table table-hover table-striped">
        <tr>
            <td>
                @*User Name:*@
                @Html.MultiLanguage(1)
            </td>
            <td>@Model.UserName</td>
            <td>
                [ @Html.ActionLink(Html.MultiLanguage(1080), "ChangeOtherInfo", "Manage") ]
            </td>
        </tr>
        <tr>
            <td>
                @*Password:*@
                @Html.MultiLanguage(2)


            </td>
            <td></td>
            <td>
                [
                @if (Model.HasPassword)
            {
                @Html.ActionLink(Html.MultiLanguage(1082), "ChangePassword")
                }
                else
                {
                @Html.ActionLink("Create", "SetPassword")
                }
                ]
            </td>
        </tr>
        <tr>
            <td>
                @*Full Name:*@
                @Html.MultiLanguage(1002)


            </td>
            <td>@Model.FullName</td>
            <td>
                [ @Html.ActionLink(Html.MultiLanguage(1081), "ChangeNames", "Manage") ]
            </td>
        </tr>

        <tr>
            <td>
                @*Company:*@
                @Html.MultiLanguage(1028)


            </td>
            <td>@Model.Company</td>
            <td>[ @Html.ActionLink(Html.MultiLanguage(1080), "ChangeOtherInfo", "Manage") ]</td>
        </tr>
        <tr>
            <td>
                @*Address:*@
                @Html.MultiLanguage(1026)


            </td>
            <td>@Model.Address</td>
            <td>
                [ @Html.ActionLink(Html.MultiLanguage(1080), "ChangeOtherInfo", "Manage") ]
            </td>
        </tr>

        <tr>
            <td>
                @*Zip Code:*@
                @Html.MultiLanguage(1048)


            </td>
            <td>@Model.ZipCode</td>
            <td>
                [ @Html.ActionLink(Html.MultiLanguage(1080), "ChangeOtherInfo", "Manage") ]
            </td>
        </tr>

        <tr>
            <td>
                @*City:*@
                @Html.MultiLanguage(1049)


            </td>
            <td>@Model.City</td>
            <td>
                [ @Html.ActionLink(Html.MultiLanguage(1080), "ChangeOtherInfo", "Manage") ]
            </td>
        </tr>

        <tr>
            <td>
                @Html.MultiLanguage(24)
                @*Phone Number:*@
            </td>
            <td>@Model.PhoneNumber</td>
            <td>[ @Html.ActionLink(Html.MultiLanguage(1083), "AddPhoneNumber", "Manage") ]</td>
        </tr>

        <tr>
            <td>
                @*Bank Account:*@
                @Html.MultiLanguage(1067)


            </td>
            <td>@Model.BankAccount</td>
            <td>[ @Html.ActionLink(Html.MultiLanguage(1080), "ChangeOtherInfo", "Manage") ]</td>
        </tr>

        <tr>
            <td>
                @Html.MultiLanguage(1068)
                @*KWK:*@
            </td>
            <td>@Model.Kwk</td>
            <td>[ @Html.ActionLink(Html.MultiLanguage(1080), "ChangeOtherInfo", "Manage") ]</td>
        </tr>
        <tr>
            <td>
                @*DDS:*@
                @Html.MultiLanguage(1046)


            </td>
            <td>@Model.Dds</td>
            <td>[ @Html.ActionLink(Html.MultiLanguage(1080), "ChangeOtherInfo", "Manage") ]</td>
        </tr>
    </table>


</div>
