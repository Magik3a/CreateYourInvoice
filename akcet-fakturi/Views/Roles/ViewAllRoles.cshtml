@model akcet_fakturi.Models.ListOfRoles

@{
    ViewBag.Title = "View all roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Roles = "active";
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">View all</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                        <button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-hover">
                        <tr>
                            <th>Id Role</th>
                            <th>Role name</th>
                            <th>Current users in role</th>
                            <th>Functions</th>
               
                     

                        </tr>

                        @foreach (var role in Model.ListRoles)
                        {
                        <tr>
                            <td>
                               @role.RoleId
                            </td>

                            <td>
                              @role.RoleName
                            </td>

                            <td>

                                <span class="label label-warning" style="font-size: 1.0em">
                                    @role.CountUsersInRole

                                </span>
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditRole", new { roleName = role.RoleName }, new { @class = "btn btn-success" })
                                <span onclick="return confirm('Are you sure to delete?')">
                                 @*   <a href="/Roles/Delete?RoleName=@role.RoleName" class="delLink" style="">Delete</a>*@
                  
                                    @Html.ActionLink("Delete role", "Delete", new { roleName = role.RoleName }, new { @class = "btn btn-danger" })


                                </span>
                            

                            </td>
                        </tr>
                      
                              
                          






                        }

                    </table>

                </div><!-- /.box-body -->

            </div><!-- /.box -->
        </div>

    </div>

</section><!-- /.content -->
