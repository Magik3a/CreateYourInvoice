@using akcet_fakturi
@using akcet_fakturi.Helpers
@using Kendo.Mvc.UI
@model IEnumerable<akcetDB.DD>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Dds = "active";
}

<h2>VAT</h2>
  <!-- Helper for info boxes after manipulating data -->
@ResultHelper.ResultFromTempData(TempData)
<p>
    @Html.ActionLink(Html.MultiLanguageString(1075), "Create",  null, new {@class="btn btn-warning btnCreateNew" })
</p>


@(Html.Kendo().Grid(Model).Name("DDs").Sortable().Filterable().Pageable().Columns(columns =>
{
columns.Bound(m => m.DdsName);
columns.Bound(m => m.Value);
columns.Bound(m => m.DateCreated);
columns.Bound(m => m.DateModified);
columns.Bound(m => m.UserName);
columns.Bound(m => m.IsNullValue);

columns.Template(@<text>
        @Html.ActionLink(Html.MultiLanguageString(1086), "Edit", new { id = item.DdsID }) |
        @Html.ActionLink(Html.MultiLanguageString(1085), "Details", new { id = item.DdsID }) |
        @Html.ActionLink(Html.MultiLanguageString(1015), "Delete", new { id = item.DdsID })
</text>).Title(Html.MultiLanguageString(1064));
})
)
