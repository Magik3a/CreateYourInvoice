<!DOCTYPE html>
<html>
<head>
    <title>АКСЕТ - онлайн фактуриране</title>
    <meta charset="utf-8">

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/
           html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/
           respond.min.js"></script>
     <![endif]-->

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/daterangepicker-bs3.css" rel="stylesheet" />
    <link href="~/Content/select2.css" rel="stylesheet" />
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
</head>
<body>

    <!--HEADER-->
    <div class="container">
        <div class="row" style="margin-top: 20px;">


            @Html.Partial("_LoginPartial")
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")

    <!--LAYOUT-->
    <!--Top Menu-->
    <div class="container">


        <div class="row" style="margin-top:40px; background-color:#F8F8F8; border-radius:5px; padding-top:10px; padding-bottom: 10px;">
            <ul class="nav nav-pills nav-justified">
                @*<li role="presentation">
                        <a href="@Url.Action("Index", "Home")">Начало</a>
                    </li>*@
                <li role="presentation" class="@ViewBag.Invoices">
                    @Html.ActionLink("Създай Фактура", "Invoices", "Home")
                </li>
                <li role="presentation" class="@ViewBag.InvoicesAllUser">
                    @Html.ActionLink("Всички Фактури", "UserInvoices", "Invoices")
                </li>
                <li role="presentation" class="@ViewBag.Companies">
                    <a href="@Url.Action("Index", "Companies")">Компании</a>
                </li>

                <li role="presentation" class="@ViewBag.Products">
                    <a href="@Url.Action("Index", "Products")">Продукти</a>
                </li>
                <li role="presentation" class="@ViewBag.Addresses">
                    <a href="@Url.Action("Index", "Addresses")">Адреси</a>
                </li>
                <li role="presentation" class="@ViewBag.Manage"><a href="@Url.Action("Index", "Manage")">Моят профил</a></li>
            </ul>
        </div>
    </div>



    <!--New Invoice menu-->
    @if (User.IsInRole("Admin"))
    {
        <div class="container" style=" margin-top: 20px; border-radius: 5px;">

            <div class="row" style=" border-radius:5px; padding-top:10px; padding-bottom: 10px;">
                <ul class="nav nav-pills nav-justified">
                    <li role="presentation" class="@ViewBag.InvoicesAll">
                        <a href="@Url.Action("Index", "Invoices")">Всички издадени фактури</a>
                    </li>
                    <li role="presentation" class="@ViewBag.Dds">
                        <a href="@Url.Action("Index", "DDs")">Ддс-та</a>
                    </li>
                    <li role="presentation" class="@ViewBag.AllCompanies">
                        <a href="@Url.Action("Index", "AllCompanies")">Фирми</a>
                    </li>
                    <li role="presentation" class="@ViewBag.Register">
                        <a href="@Url.Action("Register", "Account")">Регистрация</a>
                    </li>
                    <li role="presentation" class="@ViewBag.ApplicationUsers">
                        <a href="@Url.Action("Index", "AppUsers")">Потребители</a>
                    </li>
                    <li role="presentation" class="@ViewBag.Roles">
                        <a href="@Url.Action("ViewAllRoles", "Roles")">Роли</a>
                    </li>
                </ul>
            </div>
        </div>


    }

    <div class="container body-content">
        @RenderBody()
        <hr />





    </div>
    <!--FOOTER-->


    <footer class="footer">
        <div class="container">



            <div class="row" style="margin-top:40px; background-color:#F8F8F8; border-radius:5px; padding-top:10px;">
                <ul class="nav nav-pills nav-justified">
                    <li role="presentation">
                        <p>
                            Designed by <a href="#" title="Petya Petkova">Petya Petkova</a>
                            <br />
                            Programmed by
                            <a href="http://s2kdesign.com" title="www.s2kdesign.com" target="_blank">Svetlin Krastanov</a>
                        </p>
                    </li>
                    <li role="presentation" class="@ViewBag.HowItsMade">
                        <a href="#">Как работи?</a>
                    </li>
                    <li role="presentation" class="@ViewBag.ForUs">
                        <a href="#">За нас</a>
                    </li>
                    <li role="presentation" class="@ViewBag.Contacts">
                        <a href="#">Контакти</a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/Scripts/datepicker-bg.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>