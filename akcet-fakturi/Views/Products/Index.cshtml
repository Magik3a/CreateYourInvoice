@using akcet_fakturi.Helpers
@using Kendo.Mvc.UI
@model IEnumerable<akcetDB.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Products = "active";
}

<h2>
    @Html.MultiLanguage(1025)
</h2>
  <!-- Helper for info boxes after manipulating data -->
@ResultHelper.ResultFromTempData(TempData)
<p>
    @Html.ActionLink(Html.MultiLanguage(1075), "Create",  null, new {@class="btn btn-warning btnCreateNew" })
</p>

@(Html.Kendo().Grid(Model).Name("Products").Sortable().Filterable().Pageable().Columns(columns =>
{
columns.Bound(m => m.ProductName);
columns.Bound(m => m.DateCreated);
columns.Bound(m => m.DateModified);
columns.Template(@<text>
        @Html.ActionLink(Html.MultiLanguage(1086), "Edit", new { id = item.ProductID }) |
        @Html.ActionLink(Html.MultiLanguage(1085), "Details", new { id = item.ProductID }) |
        @Html.ActionLink(Html.MultiLanguage(1015), "Delete", new { id = item.ProductID })
</text>).Title(Html.MultiLanguage(1064));
})
)